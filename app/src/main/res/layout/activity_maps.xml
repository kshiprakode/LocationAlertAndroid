<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonAddLocation"
        android:text="Add Destination"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </Button>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:hint="Add Location"
        android:id="@+id/location"
        android:editable="true"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonAddLocation" />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.locationalert.MapsActivity"
    android:layout_below="@+id/buttonAddLocation"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalLocation"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/buttonAddLocation"
        android:visibility="invisible"
        android:textColor="#f01212"
        android:textStyle="bold" />

</RelativeLayout>
